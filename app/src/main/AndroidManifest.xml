        </activity-alias>
        <activity-alias
            android:name=".SplashSnowFalling"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_christmas"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_christmas_round"
            android:targetActivity=".intents.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name=".SplashScreenNoIcon"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:targetActivity=".intents.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4546055219731501~9110514822" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.cory.hourcalculator.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>