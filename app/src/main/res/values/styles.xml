<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="backgroundColor">#ffffff</item>
        <item name="bottomSheetBackgroundColor">#ffffff</item>
        <item name="textColor">@android:color/black</item>
        <item name="settingsTextColor">@android:color/black</item>
        <item name="popupMenuBackground">@color/lightMenuBackground</item>
        <item name="followSystem">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:listPopupWindowStyle">@style/listPopupWindowLight</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuLightActionbar</item>
        <item name="SystemAccent" tools:targetApi="s">@android:color/system_neutral2_100</item>
        <item name="settingsIconTint">#000000</item>
        <item name="historyItemMenuTint">#000000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="listPopupWindowDark" parent="Widget.Material3.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/rounded_menu_dark</item>
    </style>

    <style name="listPopupWindowLight" parent="Widget.Material3.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/rounded_menu_light</item>
    </style>

    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
       <item name="android:popupBackground">@drawable/rounded_menu_dark</item>
    </style>

    <style name="PopupMenuLightActionbar" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_menu_light</item>
    </style>

    <style name="Theme.AMOLED" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="backgroundColor">#000000</item>
        <item name="bottomSheetBackgroundColor">#131313</item>
        <item name="textColor">@android:color/white</item>
        <item name="settingsTextColor">@android:color/black</item>
        <item name="popupMenuBackground">@color/darkMenuBackground</item>
        <item name="followSystem">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:listPopupWindowStyle">@style/listPopupWindowDark</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="SystemAccent" tools:targetApi="s">@android:color/system_neutral2_800</item>
        <item name="settingsIconTint">#000000</item>
        <item name="historyItemMenuTint">#000000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="datePickerNew" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="backgroundColorDialog">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/date_picker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
        <item name="colorControlHighlight">#808080</item>
        <item name="colorControlActivated">#808080</item>
        <item name="colorPrimary">#808080</item>
        <item name="colorAccent">#808080</item>
        <item name="colorOnSurface">#D80909</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#808080</item>
    </style>

    <style name="datePickerNew_dark" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="backgroundColorDialog">#191919</item>
        <item name="android:windowBackground">@drawable/date_picker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
        <item name="colorControlHighlight">#808080</item>
        <item name="colorControlActivated">#808080</item>
        <item name="colorPrimary">#808080</item>
        <item name="colorAccent">#808080</item>
        <item name="colorOnSurface">#D80909</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#D5D5D5</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#898989</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>