<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">#ffffff</item>

        <item name="textColor">#000000</item>

        <item name="settingsTextColor">@android:color/black</item>
        <item name="settingsIconTint">@color/lightIconTint</item>

        <item name="cardBackground">@color/cardLightBackground</item>
        <item name="historyItemMenuTint">@android:color/black</item>
        <item name="popupMenuBackground">@color/lightMenuBackground</item>
        <item name="followSystem">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowDotStyle</item>
        <item name="bottomNavTextColor">@android:color/white</item>

        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="Theme.DarkTheme" parent="ThemeOverlay.MaterialComponents.Dark">
       <item name="backgroundColor">@color/darkThemeBackground</item>
        <item name="textColor">@android:color/white</item>
        <item name="settingsTextColor">@android:color/black</item>
        <item name="popupMenuBackground">@color/darkMenuBackground</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowDotStyle</item>
        <item name="bottomNavTextColor">@android:color/black</item>
    </style>

    <style name="Theme.AMOLED" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="backgroundColor">#000000</item>
        <item name="textColor">@android:color/white</item>
        <item name="settingsTextColor">@android:color/black</item>
        <item name="popupMenuBackground">@color/darkMenuBackground</item>
        <item name="followSystem">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowDotStyle</item>
        <item name="bottomNavTextColor">@android:color/black</item>
    </style>

    <style name="SplashLightTheme">
        <item name="android:background">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="SplashDarkTheme">
        <item name="android:background">@color/darkThemeBackground</item>
        <item name="colorPrimaryDark">@color/darkThemeBackground</item>
    </style>

    <style name="SplashBlackTheme">
        <item name="android:background">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="pink_accent">
        <item name="colorPrimary">@color/pinkAccent</item>
        <item name="colorAccent">@color/pinkAccent</item>
        <item name="colorPrimaryDark">@color/darkPink</item>
        <item name="appBarBackground">@color/pinkAccent</item>
        <item name="cardBackground">@color/cardPink</item>
        <item name="selectedTint">@color/pinkAccent</item>
        <item name="bottomNavIconTint">@color/pinkNavBarIconTint</item>
        <item name="patchNotesCardBackground">@color/colorPrimaryPatchNotesCardView_pink</item>
    </style>

    <style name="teal_accent">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/darkTeal</item>
        <item name="appBarBackground">@color/colorPrimary</item>
        <item name="cardBackground">@color/cardTeal</item>
        <item name="selectedTint">@color/colorPrimary</item>
        <item name="bottomNavIconTint">@color/tealNavBarIconTint</item>
        <item name="patchNotesCardBackground">@color/colorPrimaryPatchNotesCardView_teal</item>
    </style>

    <style name="orange_accent">
        <item name="colorPrimary">@color/orangeAccent</item>
        <item name="colorAccent">@color/orangeAccent</item>
        <item name="colorPrimaryDark">@color/darkOrangeAccent</item>
        <item name="appBarBackground">@color/orangeAccent</item>
        <item name="cardBackground">@color/cardOrange</item>
        <item name="selectedTint">@color/orangeAccent</item>
        <item name="bottomNavIconTint">@color/orangeNavBarIconTint</item>
        <item name="patchNotesCardBackground">@color/colorPrimaryPatchNotesCardView_orange</item>
    </style>

    <style name="red_accent">
        <item name="colorPrimary">@color/redAccent</item>
        <item name="colorAccent">@color/redAccent</item>
        <item name="colorPrimaryDark">@color/darkRed</item>
        <item name="appBarBackground">@color/redAccent</item>
        <item name="cardBackground">@color/cardRed</item>
        <item name="selectedTint">@color/redAccent</item>
        <item name="bottomNavIconTint">@color/redNavBarIconTint</item>
        <item name="patchNotesCardBackground">@color/colorPrimaryPatchNotesCardView_red</item>
    </style>

    <style name="system_accent">
        <item name="colorPrimary">@color/systemAccent</item>
        <item name="colorAccent">@color/systemAccent</item>
        <item name="colorPrimaryDark">@color/systemAccentDark</item>
        <item name="appBarBackground">@color/systemAccent</item>
        <item name="cardBackground">@color/cardSystem</item>
        <item name="selectedTint">@color/systemAccent</item>
        <item name="bottomNavIconTint">@color/systemNavBarIconTint</item>
        <item name="patchNotesCardBackground">@color/colorPrimaryPatchNotesCardView_system</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/darkTeal</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/colorPrimaryLightDialog</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="AlertDialogStylePink" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/darkPink</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/pinkDialog</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="AlertDialogStyleOrange" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/darkOrangeAccent</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/orangeDialog</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="AlertDialogStyleRed" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/redDialog</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="AlertDialogStyleSystemAccent" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/systemAccentDark</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/systemAccentDialog</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="PopupMenuLight">
        <item name="android:itemBackground">@color/lightMenuBackground</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenuDark">
        <item name="android:itemBackground">@color/darkMenuBackground</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="overflowDotStyle">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

    <style name="datePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="dialogCornerRadius">28dp</item>
        <item name="android:background">@color/darkThemeBackground</item>
    </style>

</resources>