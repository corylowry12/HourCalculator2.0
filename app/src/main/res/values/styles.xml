        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopupMenuRed">
        <item name="android:itemBackground">@color/redAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopupMenuSystem">
        <item name="android:itemBackground">@color/systemAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>